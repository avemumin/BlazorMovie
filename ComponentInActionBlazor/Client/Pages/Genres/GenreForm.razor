<EditForm Model="Genre" OnValidSubmit="OnValidSubit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText class="form-control" @bind-Value="@Genre.Name" autocomplete="nope" />
            <ValidationMessage For="() => Genre.Name" />
        </div>
    </div>
    <div>
        <br />
        <button class="btn btn-success" type="submit">Save Changes</button>
    </div>
</EditForm>
@code {
    [Parameter] public Genre Genre { get; set; }
    [Parameter] public EventCallback OnValidSubit { get; set; }
}
