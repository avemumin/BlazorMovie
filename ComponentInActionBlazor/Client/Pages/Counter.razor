@page "/counter"

<PageTitle>Counter</PageTitle>

<h1 style="color: @AppState.Color">Counter</h1>


<div style="display:flex">
    <div style="width:150px">
        <select @bind="AppState.Color" class="form-control" style="margin-top: 15px">
            <option value="green">Green</option>
            <option value="red">Red</option>
            <option value="orange">Orange</option>
        </select>

    </div>
    <div style="width:150px">
        <select @bind="AppState.Size" class="form-control" style="margin-top: 15px">
            <option value="12px">12</option>
            <option value="24px">24</option>
            <option value="36px">36</option>
        </select>

    </div>
</div>


<p style="color:@AppState.Color; font-size:@AppState.Size" role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<button class="btn btn-secondary" @onclick="IncrementCountJavaScript">Click me JavaScript</button>

